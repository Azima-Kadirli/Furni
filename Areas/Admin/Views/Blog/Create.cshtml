@model Blog
<div class="container">
    <div class="row">
        <h2>Create Product</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="title" />
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>

            <div class="form-group">
                <label asp-for="Text"></label>
                <input asp-for="Text" class="form-control" placeholder="text" />
                <span class="text-danger" asp-validation-for="Text"></span>
            </div>

            <div class="form-group">
                <label asp-for="PostDate"></label>
                <input asp-for="PostDate" class="form-control" placeholder="PostDate" />
                <span class="text-danger" asp-validation-for="PostDate"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageName"></label>
                <input asp-for="ImageName" class="form-control" placeholder="ImageName" />
                <span class="text-danger" asp-validation-for="ImageName"></span>
            </div>


            <div class="form-group">
                <label asp-for="EmployeeId"></label>
                <select asp-for="EmployeeId" id="EmployeeId">
                    @foreach (Employee employee in ViewBag.Employees)
                    {
                        <option value="@employee.Id">@employee.FirstName</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="EmployeeId"></span>
            </div>


            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="ImageUrl" />
                <span class="text-danger" asp-validation-for="ImageUrl"></span>
            </div>


            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
